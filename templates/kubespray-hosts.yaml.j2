all:
  hosts:
{% for node in node_info %}
    {{ node.name }}:
      ansible_host: {{ node.internal_ip }}
      ip: {{ node.internal_ip }}
      access_ip: {{ node.internal_ip }}
{% endfor %}
  children:
    kube_control_plane:
      hosts:
{% for node in node_info | selectattr('role', 'equalto', 'master') %}
        {{ node.name }}:
{% endfor %}
    kube_node:
      hosts:
{% for node in node_info | selectattr('role', 'equalto', 'worker') %}
        {{ node.name }}:
{% endfor %}
    etcd:
      hosts:
{% for node in node_info | selectattr('role', 'equalto', 'master') %}
        {{ node.name }}:
{% endfor %}
    k8s_cluster:
      children:
        kube_control_plane:
        kube_node:
    calico_rr:
      hosts: {}

